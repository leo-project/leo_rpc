{require_otp_vsn, "R15B03|R16B*|17"}.

{deps, [
        {leo_commons, ".*", {git, "https://github.com/leo-project/leo_commons.git", {tag, "1.0.4"}}},
        {leo_pod,     ".*", {git, "https://github.com/leo-project/leo_pod.git",     {tag, "0.6.2"}}},
        {lz4,         ".*", {git, "https://github.com/leo-project/erlang-lz4.git",  {tag, "0.1.1"}}}
       ]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warnings_as_errors,
            warn_shadow_vars
           ]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
